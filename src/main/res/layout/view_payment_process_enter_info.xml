                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textColor="@color/social_tagg_gray"
                        />
                    <TextView
                        android:id="@+id/label_multiply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_standard"
                        android:layout_toRightOf="@+id/label_ticket_quantity_page_1"
                        android:text="x"
                        android:textColor="@color/social_tagg_gray"
                        />
                    <TextView
                        android:id="@+id/label_ticket_type_page_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_standard"
                        android:layout_toRightOf="@+id/label_multiply"
                        android:layout_toLeftOf="@+id/label_dollar_sign_1"
                        android:text="General Admission"
                        android:textColor="@color/social_tagg_gray"
                        />
                    <TextView
                        android:id="@+id/label_dollar_sign_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_toLeftOf="@+id/label_ticket_price_single_page_1"
                        android:text="$"
                        android:textColor="@color/social_tagg_gray"
                        />
                    <TextView
                        android:id="@+id/label_ticket_price_single_page_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_standard"
                        android:text="15.56"
                        android:textColor="@color/social_tagg_gray"
                        />
                </RelativeLayout>

