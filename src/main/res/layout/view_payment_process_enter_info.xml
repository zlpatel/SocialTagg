                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginTop="@dimen/margin_small"
                    android:paddingLeft="@dimen/padding_large"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingRight="@dimen/padding_medium"
                    android:paddingEnd="@dimen/padding_medium"
                    >

                    <ImageView
                        android:id="@+id/image_creditcards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/label_total_page_1"
                        android:layout_toStartOf="@+id/label_total_page_1"
                        android:src="@drawable/creditcard_droid"
                        />

                    <TextView
                        android:id="@+id/label_total_page_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_toLeftOf="@+id/label_dollar_sign_2"
                        android:text="TOTAL"
                        android:textStyle="bold"
                        android:textColor="@color/social_tagg_gray"
                        />
