                        android:textColor="@color/social_tagg_gray"
                        />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Personal Information"
                android:textColor="@color/social_tagg_gray_dark"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/shape_rectangle_rounded_corners"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/payment_enter_info_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_first_name"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@color/social_tagg_gray_dark"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/social_tagg_gray"/>

                <EditText
                    android:id="@+id/payment_enter_info_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_last_name"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@color/social_tagg_gray_dark"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/social_tagg_gray"/>

                <EditText
                    android:id="@+id/payment_enter_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="@dimen/padding_small"
                    android:hint="@string/hint_email_address"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/social_tagg_gray_dark"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_standard"
                android:text="Payment Information"
                android:textColor="@color/social_tagg_gray_dark"
                android:textStyle="bold"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/shape_rectangle_rounded_corners"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/payment_enter_info_zip_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_billing_zip_code"
                    android:inputType="number"
                    android:textColor="@color/social_tagg_gray_dark"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/social_tagg_gray"/>

                <EditText
                    android:id="@+id/payment_enter_info_credit_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_credit_card_number"
                    android:inputType="number"
                    android:textColor="@color/social_tagg_gray_dark"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/social_tagg_gray"/>

                <EditText
                    android:id="@+id/payment_enter_info_ccv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="@dimen/padding_small"
                    android:hint="@string/hint_ccv_number"
                    android:inputType="number|numberPassword"
                    android:textColor="@color/social_tagg_gray_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/social_tagg_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:paddingLeft="@dimen/padding_medium"
                    android:paddingRight="@dimen/padding_medium"
                    >

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/expiration_date"
                        android:textColor="@color/social_tagg_gray"
                        />

                    <Spinner
                        android:id="@+id/spinner_month"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="false"
                        android:layout_toRightOf="@+id/textView"

                        />

                    <TextView
                        android:id="@+id/slash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/spinner_month"
                        android:text="/"
                        android:layout_marginLeft="@dimen/margin_standard"
                        android:layout_marginRight="@dimen/margin_standard"
                        />

                    <Spinner
                        android:id="@+id/spinner_year"
                        android:layout_width="60sp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="false"
                        android:layout_toRightOf="@+id/slash"
                        />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/button_next_step"
                style="@style/button_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/next" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>